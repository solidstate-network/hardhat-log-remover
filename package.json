{
  "name": "@solidstate/hardhat-log-remover",
  "version": "3.0.0",
  "description": "Remove Hardhat console.log imports and calls from Solidity source files",
  "keywords": [
    "harhat",
    "buidler",
    "solidity",
    "smart-contracts",
    "console",
    "log",
    "console.log",
    "ethereum",
    "blockchain",
    "wow"
  ],
  "repository": "github:solidstate-network/hardhat-log-remover",
  "license": "MIT",
  "author": "Nick Barry",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
