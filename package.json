    "husky": "^9.1.7",
    "knip": "^5.56.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.11",
    "prettier-plugin-solidity": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "hardhat": "^3.0.0-next.4"
